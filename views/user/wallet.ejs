        }

        .table td {
        padding-top: 20px;
        padding-bottom: 20px;
        vertical-align: middle; /* Center-align the content vertically */
    }

    /* Custom styles for product details */
    .cart-items .quantity-display, .total-price, .remove-btn {
        margin-top: 10px; /* Add some margin to push elements down */
    }

    /* Button spacing for quantity buttons */
    .quantity-btn {
        margin: 0 5px;
    }

    /* Image and product name alignment */
    .cart-items img {
        margin-bottom: 15px;
    }

    .cart-items p {
        margin-top: 10px;
    }

    /* Responsive adjustments */
    @media (max-width: 768px) {
        .cart-items td {
            display: block;
            text-align: center;
            padding-top: 10px;
            padding-bottom: 10px;
        }

        .cart-items img {
            max-width: 100px;
            margin-bottom: 10px;
        }

        .cart-items .quantity-btn {
            margin: 5px 0;
        }

        .total-price, .remove-btn {
            display: block;
            margin-top: 10px;
        }

        .cart-items thead {
            display: none; 
        }
        
        .cart-items tbody tr {
            display: block;
            margin-bottom: 15px;
            border-bottom: 1px solid #ddd; 
        }
    }

    @media (max-width: 576px) {
        .cart-items img {
            max-width: 80px;
        }

        .cart-items .quantity-btn {
            font-size: 12px; 
        }

        .total-price, .remove-btn {
            margin-top: 15px;
        }
    }
