                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </nav>
                </div>
            </div>
        </div>
    
        <div class="transaction-table">
            <div class="container my-4 d-flex justify-content-center">
                <!-- Wallet Balance Card -->
                <div class="card" style="width: 100%; max-width: 400px; border: none; background-color: #f8f9fa;">
                    <div class="card-body text-center">
                        <h4 class="card-title">Your Wallet Balance</h4>
                        <h2 class="card-text text-primary">₹<%= locals.user.wallet.toFixed(2) %></h2> 
                    </div>
                </div>
            </div>
                <!-- Table for larger screens -->
                <div class="table-responsive d-none d-md-block" style="padding: 0px 20px;">
                    <h4 class="mt-5">Transaction History</h4>
                    <table class="table table-bordered table-hover mt-3"  >
                        <thead class="table-light">
                            <tr>
                                <th>Transaction ID</th>
                                <th>Description</th>
                                <th>Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% transactions.forEach(transaction => { %>
                                <tr>
                                    <td><%= transaction._id %></td>
                                    <td><%= transaction.type %></td>
                                    <td>₹<%= transaction.amount.toFixed(2) %></td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            
                <!-- Card for mobile screens -->
                <div class="d-block d-md-none">
                    <div class="row">
                        <% transactions.forEach(transaction => { %>
                        <div class="col-12 mb-3">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">Transaction ID: <%= transaction._id %></h5>
                                    <p class="card-text">Description: <%= transaction.type %></p>
                                    <p class="card-text">Amount: ₹<%= transaction.amount.toFixed(2) %></p>
                                </div>
                            </div>
                        </div>
                        <% }); %>
                    </div>
                </div>
    
            </div>        
        </div>
    
    <div class="col-12 pb-1">
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center mb-3">
                <% if (currentPage > 1) { %>
                    <li class="page-item">
                        <a class="page-link" href="?page=<%= currentPage - 1 %>" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                            <span class="sr-only">Previous</span>
                        </a>
                    </li>
                <% } else { %>
                    <li class="page-item disabled">
                        <a class="page-link" href="#" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                            <span class="sr-only">Previous</span>
                        </a>
                    </li>
                <% } %>
    
                <% for (let i = 1; i <= totalPages; i++) { %>
                    <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                        <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                    </li>
                <% } %>
    
                <% if (currentPage < totalPages) { %>
                    <li class="page-item">
                        <a class="page-link" href="?page=<%= currentPage + 1 %>" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                            <span class="sr-only">Next</span>
                        </a>
                    </li>
                <% } else { %>
                    <li class="page-item disabled">
                        <a class="page-link" href="#" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                            <span class="sr-only">Next</span>
                        </a>
                    </li>
                <% } %>
            </ul>
        </nav>
    </div>
    

