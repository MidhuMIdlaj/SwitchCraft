      <div class="container-fluid pt-5">
        <h1 class="text-center">Your Wishlist</h1>
        <div class="row">
            <div class="col-lg-12 table-responsive mb-5">
                <% if (products && products.length > 0) { %>
                <div class="wishlist-items">
                    <table class="table table-bordered text-center mb-0">
                        <thead class="bg-secondary text-dark">
                            <tr>
                                <th>Products</th>
                                <th>Name</th>
                                <th>Remove</th>
                            </tr>
                        </thead>
                        <tbody class="align-middle">
                            <% for (let i = 0; i < products.length; i++) { %>
                            <tr data-product-id="<%= products[i].productId._id %>">
                              
                                <td>
                                    <a href="/shopDetails/<%= products[i].productId._id %>">
                                    <img src="<%= products[i].productId.productImage[0] %>" alt="Product Image" style="width: 80px;">      
                                </a>
                                </td>
                                    <td>
                                        <p><%= products[i].productId.productName %></p>
                                    </td>
                                <td>
                                    
                                <a href="/wishlist/remove/<%= products[i].productId._id %>">
                                    <button type="submit" class="remove-btn btn btn-danger">✖</button>
                                </a>

                                </td>
                            
                            </tr>
                     
                            <% } %>
                        </tbody>                                      
                    </table>
                </div>
                <% } else { %>
