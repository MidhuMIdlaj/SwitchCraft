  <script>
 function updateQuantity(productId, change) {
    fetch(`/cart/update-quantity/${productId}`, {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json'
        },
        body: JSON.stringify({ change: change })
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            const quantityElement = document.querySelector(`[data-product-id="${productId}"]`);
            if (quantityElement) {
                const quantityDisplay = quantityElement.querySelector('.quantity-display');
                const priceElement = quantityElement.querySelector('.total-price');

                if (quantityDisplay && priceElement) {
                    const currentQuantity = parseInt(quantityDisplay.innerText);
                    const newQuantity = currentQuantity + change;
                    quantityDisplay.innerText = newQuantity; 
                    const newTotalPrice = (data.price).toFixed(2);  
                    priceElement.innerText = `₹${newTotalPrice}`; 
                    updateSubtotal(); 
                }
            }
        } else if (data.error === 'outOfStock') {
            Swal.fire({
                title: 'Error!',
                text: 'Cannot increase quantity. Only available stock left.',
                icon: 'error',
                confirmButtonText: 'OK'
            });
        } else if (data.error === 'zeroQuantity') {
            Swal.fire({
                title: 'Notice',
                text: 'Quantity is zero. Redirecting to shop page.',
                icon: 'info',
                confirmButtonText: 'OK'
            }).then(() => {
                window.location.href = '/shop';
            });
        } else {
            Swal.fire({
                title: 'Unexpected Error',
                text: `An unexpected error occurred: ${data.error}`,
                icon: 'error',
                confirmButtonText: 'OK'
            });
        }
    })
    .catch(err => {
        console.error('Error updating quantity:', err);
    });
}

  
function updateSubtotal() {
    let subtotal = 0;
    const items = document.querySelectorAll('.total-price');  
    items.forEach(item => {
        const price = parseFloat(item.innerText.replace('₹', '')); 
        subtotal += price;
    });
    const shipping = 50;
    const totalAmount = subtotal + shipping; 
    document.querySelector('.subtotal-display').innerText = `₹${subtotal.toFixed(2)}`;
    document.querySelector('.total-display').innerText = `₹${totalAmount.toFixed(2)}`;
}



function removeProduct(event, productId) {
    event.preventDefault()
    fetch(`/cart/remove/${productId}`, {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json'
        }
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            const productRow = document.querySelector(`[data-product-id="${productId}"]`);
            if (productRow) {
                productRow.remove();
            }
            updateSubtotal();
            Swal.fire({
                title: 'Success!',
                text: data.message,
                icon: 'success',
                confirmButtonText: 'OK'
            }).then(() => {
                window.location.href = data.redirectUrl; 
            });
        } else {
            Swal.fire({
                title: 'Error!',
                text: data.error,
                icon: 'error',
                confirmButtonText: 'OK'
            });
        }
    })
    .catch(err => {
        console.error(' removing product:', err);
        Swal.fire({
            title: 'warning!',
            text: ' removing product. Please try again.',
            icon: 'warning',
            confirmButtonText: 'OK'
        });
        window.location.reload()
    });
}
