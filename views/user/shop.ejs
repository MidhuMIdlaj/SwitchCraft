    <script>
        // Update the URL with selected filters, sort, and pagination
        document.getElementById('searchForm').addEventListener('submit', function(event) {
            event.preventDefault(); 
            const form = document.getElementById('filtersForm');
    
            const selectedBrands = [];
            const selectedTypes = [];
            form.querySelectorAll('input[name="brand"]:checked').forEach(checkbox => {
                selectedBrands.push(checkbox.value);
            });
            form.querySelectorAll('input[name="type"]:checked').forEach(checkbox => {
                selectedTypes.push(checkbox.value);
            });
            const brand = selectedBrands.length > 0 ? selectedBrands.join(',') : '';
            const type = selectedTypes.length > 0 ? selectedTypes.join(',') : '';
            const searchQuery = document.getElementById('searchQuery').value;
    
            const url = `/shop?brand=${brand}&type=${type}&searchQuery=${searchQuery}`;
            window.location.href = url; 
        });
    
        function updateURLParams() {
            const form = document.getElementById('filtersForm');
            const selectedBrands = [];
            const selectedTypes = [];
            form.querySelectorAll('input[name="brand"]:checked').forEach(checkbox => {
                selectedBrands.push(checkbox.value);
            });
            form.querySelectorAll('input[name="type"]:checked').forEach(checkbox => {
                selectedTypes.push(checkbox.value);
            });
            const brand = selectedBrands.length > 0 ? selectedBrands.join(',') : '';
            const type = selectedTypes.length > 0 ? selectedTypes.join(',') : '';
            const searchQuery = document.getElementById('searchQuery').value;
            const priceRange = getPriceRange(); 
    
            window.location.href = `/shop?brand=${brand}&type=${type}&searchQuery=${searchQuery}&priceRange=${priceRange}&page=1`;
        }
        function getPriceRange() {
            const selectedRanges = [];
            document.querySelectorAll('input[name="priceRange"]:checked').forEach(checkbox => {
                selectedRanges.push(checkbox.value);
            });
            return encodeURIComponent(JSON.stringify(selectedRanges)); 
        }                                                                                                                                                                                                                                                                                                                                                                                          
        function sortProducts(sortBy) {
            const urlParams = new URLSearchParams(window.location.search);
            urlParams.set('sortBy', sortBy);
            const brand = getQueryParam('brand') || '';
            const type = getQueryParam('type') || '';
            const searchQuery = getQueryParam('searchQuery') || '';
            const priceRange = getQueryParam('priceRange') || '';
            const page = getQueryParam('page') || 1;
            urlParams.set('brand', brand);
            urlParams.set('type', type);
            urlParams.set('searchQuery', searchQuery);
            urlParams.set('priceRange', priceRange);
            urlParams.set('page', page);
            window.location.href = `/shop?${urlParams.toString()}`;
        }
        function getQueryParam(param) {
            const urlParams = new URLSearchParams(window.location.search);
            return urlParams.get(param);
        }
    
        function goToPage(page) {
            const urlParams = new URLSearchParams(window.location.search);
            urlParams.set('page', page);
            window.location.href = `/shop?${urlParams.toString()}`;
        }
    
        document.addEventListener('DOMContentLoaded', () => {
            document.querySelectorAll('input[type="checkbox"]').forEach(checkbox => {
                checkbox.addEventListener('change', updateURLParams); 
            });
        });
    </script>
    

       
       <script>

    function addToWishlist(productId) {
        fetch('/wishlist/add', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({ productId: productId }),
        })
        .then(response => response.json())
        .then(data => {
            if (data.message) {
                toastr.success('Product added to wishlist!');
            } else {
                toastr.error(data.message || 'already added the product to wishlist');
            }
        })
        .catch(error => console.error('Error:', error));
    }
</script>


