                        </div>
                    </div>
                </nav>
            </div>
        </div>
    </div>


    <!-- Main Content with Address on Left and Order/Payment on Right -->
    <div class="container mt-5">
        <div class="row">
            <!-- Address Section (Left) -->
            <div class="col-lg-6">
                <div class="form-group box-model">
                    <label for="addressSelect">
                        <h3>Select Address</h3>
                    </label>
                    <% if (addresses !=null) {%>
                        <select class="form-control box" id="addressSelect">
                            <% addresses.address.forEach(function(address) { %>
                                <option id="temp" value="<%= address._id %>">
                                    <%= address.firstName %>
                                        <%= address.lastName %> - <%= address.houseNumber %>,
                                                <%= address.area %>, <%= address.district %>, <%= address.pinCode %>
                                </option>
                                <% }) %>
                        </select>
                        <%}%>
                </div>

                <a href="/checkOutAddress">
                    <div class="form-group">
                        <button class="btn btn-block btn-primary">Add New Address</button>
                    </div>
                </a>
            </div>
            <div class="col-lg-6">
                <!-- Order Summary -->
                <div class="card border-secondary mb-5 box-model">
                    <div class="card-header bg-secondary border-0">
                        <h4 class="font-weight-semi-bold m-0"><i class="fas fa-receipt"></i> Order Total</h4>
                    </div>
                    <div class="card-body">
                        <% cart.items.forEach(function(item) { %>
                            <p>
                                <%= item.productId.productName %> (Qty: <%= item.quantity %>) 
                            </p>
                            <% }) %>
                                <hr class="mt-0">
                                <div class="d-flex justify-content-between mb-3 pt-1">
                                    <h6 class="font-weight-medium">Subtotal</h6>
                                    <h6 class="font-weight-medium"><i class="fas fa-rupee-sign"></i>
                                        <%= cart.totalPrice.toFixed(2) %>
                                    </h6>
                                </div>
                                <div class="d-flex justify-content-between">
                                    <h6 class="font-weight-medium">Shipping</h6>
                                    <h6 class="font-weight-medium"><i class="fas fa-rupee-sign"></i> 50</h6>
                                </div>
                                <form id="couponForm">
                                    <div class="input-group">
                                        <select class="form-control p-4" id="couponCode">
                                            <option value="" disabled selected>Select a Coupon</option>
                                            <% coupons.forEach(function(coupon){%>
                                                <option value="<%= coupon.name %>">
                                                    <%= coupon.name %> - Offer: <%= coupon.OfferPrice %>%
                                                </option>
                                                <% }) %>
                                        </select>
                                        <div class="input-group-append">
                                            <button class="btn btn-primary" type="button" id="applyCouponBtn">Apply
                                                Coupon</button>
                                                <button class="btn btn-danger" type="button" id="removeCouponBtn" style="display: none;">Remove Coupon</button>
                                        </div>
                                    </div>
                                </form>
                       </div>
                    <div class="card-footer border-secondary bg-transparent" >
                        <div class="d-flex justify-content-between mt-2">
                            <h5 class="font-weight-bold">Total</h5>
                            <h5 class="font-weight-bold"><i class="fas fa-rupee-sign"></i> <span id="totalPrice">
                                    <%= cart.totalPrice + 50 %>
                                </span></h5>
                        </div>
                    </div>
                </div>

                <!-- Payment Section -->
                <div class="card border-secondary mb-5 box-model">
                    <div class="card-header bg-secondary border-0">
                        <h4 class="font-weight-semi-bold m-0"><i class="fas fa-credit-card"></i> Payment</h4>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <div class="custom-control custom-radio">
                                <input type="radio" class="custom-control-input" name="payment" id="Razorpay"
                                    value="Razorpay">
                                <label class="custom-control-label" for="Razorpay">
                                    <i class="fas fa-money-check-alt"></i> Razorpay
                                </label>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="custom-control custom-radio">
                                <input type="radio" class="custom-control-input" name="payment" id="COD" value="cod">
                                <label class="custom-control-label" for="COD">
                                    <i class="fas fa-cash-register"></i> Cash on Delivery (COD)
                                </label>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Place Order Button -->
                <div class="form-group">
                    <button class="btn btn-lg btn-block btn-primary" id="placeOrderBtn">
                        <i class="fas fa-paper-plane"></i> Place Order
                    </button>
                </div>
            </div>
        </div>
    </div>
    <!-- Include Toastr CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">

    <!-- Include jQuery and Toastr JS -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

    <script>
