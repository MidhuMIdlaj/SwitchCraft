            width: 50%;
            height: 5rem;
            padding: 5px;
            border: 1px solid #ccc;
            border-radius: 10px;
            background-color: #f9f9f9;
            /* Light background for the dropdown */
            font-size: 16px;
            /* Adjust font size */
            appearance: none;
            /* Remove default select arrow on some browsers */
            outline: none;
            /* Remove focus outline */
            transition: border-color 0.3s ease;
            /* Smooth transition for hover/focus */
        }

        .box-model select:focus {
            border-color: #007bff;
        }

        /* Flexbox centering */
